
@{
    Layout = "_LayoutLightBox";
    ViewData["Title"] = "Senha Redefinida";
}

<div class="login-box">
    <div class="card">
        <div class="card-body login-card-body">
            <div class="row">
                <div class="col-12">
                    <a href="@Url.Action("Index")" class="access__link">
                        <i class="access__icon fas fa-arrow-left"></i>
                        Voltar
                    </a>
                    <div class="access__top">
                        <h2 class="access__title--answer">
                            Sua senha foi redefinida com sucesso!
                        </h2>
                        <p class="access__description">
                            Agora você pode fazer seu login novamente, utilizando a nova senha cadastrada.
                        </p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <a href="@Url.Action("Index", "Login")" class="btn btn-primary">Voltar</a>
                </div>
            </div>
        </div>
    </div>
</div>